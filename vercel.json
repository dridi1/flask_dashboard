{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index" }
  ],
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "FLASK_ENV": "production"
    }
  },
  "ignore": [
    "^.*\\.md$",
    "^tests/.*$",
    "^docs/.*$",
    "^.*\\.gitignore$",
    "^\\.git$",
    "^\\.vscode$",
    "^__pycache__$",
    "^.*\\.pyc$",
    "^\\.env$",
    "^node_modules$"
  ]
}
